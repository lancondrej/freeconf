<?xml version="1.0" encoding="UTF-8"?>
<freeconf_template>
    <container name="general">
        <string name="lang">
            <properties>
                <mandatory>yes</mandatory>
                <data>lang_list</data>
            </properties>
        </string>
    </container>

    <container name="packages_dir">
        <string name="location">
            <properties>
                <mandatory>yes</mandatory>
            </properties>
            <multiple>
                <min>1</min>
            </multiple>
        </string>
    </container>

    <container name="logging">
        <group>logging</group>
        <string name="Freeconf">
            <properties>
                <mandatory>yes</mandatory>
                <data>log_level</data>
            </properties>
        </string>
        <string name="Model">
            <properties>
                <mandatory>yes</mandatory>
                <data>log_level</data>
            </properties>
        </string>
        <string name="Presenter">
            <properties>
                <mandatory>yes</mandatory>
                <data>log_level</data>
            </properties>
        </string>
        <string name="View">
            <properties>
                <mandatory>yes</mandatory>
                <data>log_level</data>
            </properties>
        </string>
        <string name="IO">
            <properties>
                <mandatory>yes</mandatory>
                <data>log_level</data>
            </properties>
        </string>
    </container>
</freeconf_template>
